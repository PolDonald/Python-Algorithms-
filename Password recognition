password = 'ab1234'
user_password_attempt = input("Enter the password")
remaining_attempts = 3
password_is_correct = True
while (user_password_attempt != password) and (remaining_attempts >0):
    password_is_correct = False
    user_password_attempt = input ('try again')
    if user_password_attempt == password:
        password_is_correct = True
    remaining_attempts = remaining_attempts - 1
if password_is_correct == True:
    print("correct")
else:
    print("false")
